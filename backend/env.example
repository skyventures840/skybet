# Backend Environment Variables for Render Deployment
# Copy this file to .env and fill in your actual values

# Node Environment
NODE_ENV=production

# Server Configuration
PORT=10000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/platypus
MONGODB_EXTERNAL_URI=mongodb://localhost:27017/platypus
MONGODB_DB_NAME=platypus

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long
JWT_EXPIRES_IN=24h

# Frontend URL (comma-separated for multiple origins)
FRONTEND_URL=https://your-frontend.onrender.com
BACKEND_URL=https://your-backend.onrender.com

# API Keys
ODDS_API_KEY=your-odds-api-key
ODDS_API_BASE_URL=https://api.the-odds-api.com/v4

# Payment Configuration
NOWPAYMENTS_API_KEY=your-nowpayments-production-api-key
NOWPAYMENTS_SANDBOX_API_KEY=your-nowpayments-sandbox-api-key
NOWPAYMENTS_IPN_SECRET=your-ipn-secret-key
NOWPAYMENTS_CALLBACK_URL=https://your-backend.onrender.com/api/payments/callback

# Logging
LOG_LEVEL=info

# Feature Flags
USE_MOCK_PAYMENTS=false
CRON_ENABLED=true
CLUSTER_MODE=false

# Render-specific
RENDER=true
